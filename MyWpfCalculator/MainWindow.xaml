<Window x:Class="MyWpfCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWpfCalculator"
        mc:Ignorable="d"
        Title="Calculator" Height="450" Width="335">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="ResultTextBox" 
          Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Text="0" 
          IsReadOnly="True" 
          FontSize="36" 
          VerticalContentAlignment="Center" 
          TextAlignment="Right" 
          Margin="1,10,10,10">
        </TextBox>

        <Button Content="AC" Grid.Row="1" Grid.Column="0" Margin="5,5,5,5" FontSize="24" Click="AllClearButton_Click"/>
        <Button Content="+/-" Grid.Row="1" Grid.Column="1" Margin="5,5,5,5" FontSize="24" Click="ToggleSignButton_Click"/>
        <Button Content="%" Grid.Row="1" Grid.Column="2" Margin="5,5,5,5" FontSize="24" Click="PercentageButton_Clic"/>
        <Button Content="/" Grid.Row="1" Grid.Column="3" Margin="5,5,5,5" FontSize="24" Click="OperatorButton_Click"/>

        <Button Content="7" Grid.Row="2" Grid.Column="0" Margin="5,5,5,5" FontSize="24" Click="NumberButton_Click"/>
        <Button Content="8" Grid.Row="2" Grid.Column="1" Margin="5,5,5,5" FontSize="24" Click="NumberButton_Click"/>
        <Button Content="9" Grid.Row="2" Grid.Column="2" Margin="5,5,5,5" FontSize="24" Click="NumberButton_Click"/>
        <Button Content="*" Grid.Row="2" Grid.Column="3" Margin="5,5,5,5" FontSize="24" Click="OperatorButton_Click"/>

        <Button Content="4" Grid.Row="3" Grid.Column="0" Margin="5,5,5,5" FontSize="24" Click="NumberButton_Click"/>
        <Button Content="5" Grid.Row="3" Grid.Column="1" Margin="5,5,5,5" FontSize="24" Click="NumberButton_Click"/>
        <Button Content="6" Grid.Row="3" Grid.Column="2" Margin="5,5,5,5" FontSize="24" Click="NumberButton_Click"/>
        <Button Content="-" Grid.Row="3" Grid.Column="3" Margin="5,5,5,5" FontSize="24" Click="OperatorButton_Click"/>

        <Button Content="1" Grid.Row="4" Grid.Column="0" Margin="5,5,5,5" FontSize="24" Click="NumberButton_Click"/>
        <Button Content="2" Grid.Row="4" Grid.Column="1" Margin="5,5,5,5" FontSize="24" Click="NumberButton_Click"/>
        <Button Content="3" Grid.Row="4" Grid.Column="2" Margin="5,5,5,5" FontSize="24" Click="NumberButton_Click"/>
        <Button Content="+" Grid.Row="4" Grid.Column="3" Margin="5,5,5,5" FontSize="24" Click="OperatorButton_Click"/>

        <Button Content="0" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,5,5,5" FontSize="24" Click="NumberButton_Click" />
        <Button Content="." Grid.Row="5" Grid.Column="2" Margin="5,5,5,5" FontSize="24" Click="NumberButton_Click"/>
        <Button Content="=" Grid.Row="5" Grid.Column="3" Margin="5,5,5,5" FontSize="24" Click="EqualsButton_Click"/>

    </Grid>
</Window>
